@{
    ViewBag.Title = "Home Page";
}

<!--Home body content-->
<div class="home-content">
    <!--Centered Theatre Vertigo Logo-->
    <div class="home-row">
        <div class="home-logo">
            <img src="~/Content/images/TheatreLogo.png" class="center" />
        </div>
    </div>

    <!--Two-Column Layout-->
    <div class="home-row">
        <!--Left Column (2/3 width)-->
        <div class="column left">
            <h2 class="section-title">SPOTLIGHT</h2>
            <img src="~/Content/images/DollsHouse.png" />
            <div class="row-2">
                <img src="~/Content/images/Tempest.png" />
            </div>
        </div>

        <!--Right Column (1/3 width)-->
        <div class="column right">
            <h2 class="section-title">DONATIONS</h2>
            <div class="btn-container">
                <button class="home-btn">Click to Support</button>
            </div>
            <h2 class="section-title">SPONSORS</h2>
            <div class="sponsors-container">
                <img src="~/Content/images/Sponsors/Ellyn-Bye-Logo.png" class="home-sponsors" />
                <img src="~/Content/images/Sponsors/LogoRoundColor.png" class="home-sponsors" />
                <img src="~/Content/images/Sponsors/Ninkasi-white-text.png" class="home-sponsors" />
                <img src="~/Content/images/Sponsors/OCF-logo-in-white-with-tagline-lg.png" class="home-sponsors" />
                <img src="~/Content/images/Sponsors/RACC.png" class="home-sponsors" />
            </div>
        </div>
    </div>

    <!--Land Acknowledgement Section-->
    <div class="home-row">
        <!--Left Column (Text)-->
        <div class="home-col1">
            <h2 class="section-title">LAND ACKNOWLEDGEMENT</h2>
            <div class="home-text">
                <p>
                    Theatre Vertigo humbly acknowledges we live and work on the unceded, traditional
                    tribal lands of the Multnomah, Wasco, Clackamas, Chinook bands, Kathlamet, Tualatin,
                    Kalapuya, Cowlitz, Mollala, Cascades, Oregon City Tumwater, Confederated Tribes of
                    the Grand Ronde and other indigenous peoples.<br /><br />
                    <span style="font-weight: bold;">We are on stolen land.</span><br /><br />
                    Theatre Vertigo has been and continues to examine our community relationships to ensure
                    our collaborators, partners and sponsors support the our region's Indigenous Nations and communities.<br /><br />
                    One of the ways Theatre Vertigo is working to act on our commitment to being of service
                    to the lands that we now share is to build bridges between our arts community and local Nations.
                </p>
            </div>
        </div>

        <!--Right Column (NAYA Link)-->
        <div class="home-col2">
            <div class="home-acknowledgement">
                <a href="https://nayapdx.org/" target="_blank"><img src="~/Content/images/NAYAFamilyCenter.jpg" /></a>
                <div class="home-text">
                    <p>Click to visit the NAYA Family Center to learn more about supporting our local indigenous communities.</p>
                </div>
            </div>
        </div>
    </div>
</div>
